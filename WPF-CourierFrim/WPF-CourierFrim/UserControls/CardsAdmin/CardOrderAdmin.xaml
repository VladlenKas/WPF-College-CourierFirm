<UserControl x:Class="WPF_CourierFrim.UserControls.CardOrderAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CourierFrim.UserControls"
             mc:Ignorable="d">

    <Grid Margin="0 0 20 20">

        <Border Background="{StaticResource BackgroundDarkBrush}"
                Padding="20"
                CornerRadius="10">

            <DockPanel Width="{Binding ElementName=ButtonsSP, Path=ActualWidth}"
                       LastChildFill="False">
                <!-- Заголовок -->
                <TextBlock Style="{StaticResource TextH2}"
                           DockPanel.Dock="Top"
                           Margin="0 0 0 24">
                    <Run Text="Заказ"/>
                    <Run Text="{Binding OrderId, StringFormat={}№{0}}"/>
                </TextBlock>

                <!-- Описание -->
                <TextBlock Margin="0 0 0 10"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap">
                    <Run Text="Тариф:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding Rate.Name}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>

                <TextBlock Margin="0 0 0 10"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap">
                    <Run Text="Организация:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding Organisation.Name}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>

                <TextBlock Margin="0 0 0 10"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap">
                    <Run Text="ФИО клиента:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding FullnameClient}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>

                <TextBlock Margin="0 0 0 10"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap">
                    <Run Text="Телефон клиента:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding PhoneClient, StringFormat={}+{0}}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>

                <TextBlock Margin="0 0 0 24"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap">
                    <Run Text="Тип:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding Content.ContentType.Name}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>
                
                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Bottom"
                            Name="ButtonsSP">

                    <Button Style="{StaticResource ButtonIconPriority}"
                            Content="Редактировать"
                            Tag="EditOutline"
                            Margin="0 0 10 0"
                            Click="Edit_Click"/>

                    <Button Style="{StaticResource ButtonIcon}"
                            Tag="InfoOutline"
                            Margin="0 0 10 0"
                            Click="Info_Click"/>
                    
                    <Button Style="{StaticResource ButtonIcon}"
                            Tag="DeleteOutline"
                            Click="Delete_Click"/>

                </StackPanel>
                
            </DockPanel>

            <Border.Effect>
                <DropShadowEffect BlurRadius="12" 
                                  ShadowDepth="4" 
                                  Opacity="0.3"
                                  Color="{StaticResource ShadowBrush}"/>
            </Border.Effect>
            
        </Border>
        
    </Grid>
    
</UserControl>
