<Window x:Class="WPF_CourierFrim.Windows.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CourierFrim.Windows"
        mc:Ignorable="d"

        xmlns:components="clr-namespace:WPF_CourierFirm.Components"
        
        Title="Регистрация" 
        Background="#272D38"
        Height="800" Width="1200"   
        MinHeight="700" MinWidth="1050"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="50">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Фото -->
        <Image Source="/Images/RegImage.png"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Column="2"/>
        
        <DockPanel Grid.Column="0"
                   LastChildFill="False">

            <!-- Заголовок -->
            <TextBlock Style="{StaticResource TextH1}"
                       Text="Вход в аккаунт"
                       Padding="0 0 0 28"
                       DockPanel.Dock="Top"/>

            <TextBlock Margin="0 0 0 40" 
                       DockPanel.Dock="Top"
                       TextWrapping="Wrap"
                       Style="{StaticResource TextH6}"
                       Text="Чтобы стать курьером FastCourier, заполни поля ниже и нажми кнопку ”Зарегистрироваться”"
                       Opacity="0.5"/>
            
            <!-- Текстовые поля -->
            <Grid DockPanel.Dock="Top">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0"
                         Grid.Row="0"
                         Name="firstnameTB"
                         Tag="Имя"/>

                <TextBox Grid.Column="2"
                         Grid.Row="0"
                         Name="lastnameTB"
                         Tag="Фамилия"/>

                <TextBox Grid.Column="0"
                         Grid.Row="2"
                         Name="patronymicnameTB"
                         Tag="Отчество"/>

                <components:BindableDateBox Grid.Column="2"
                                            Grid.Row="2"/>

                <TextBox Grid.Column="0"
                         Grid.Row="4"
                         Name="passportTB"
                         Tag="Паспорт"/>

                <TextBox Grid.Column="2"
                         Grid.Row="4"
                         Name="phoneTB"
                         Tag="Номер телефона"/>

                <TextBox Grid.Column="0"
                         Grid.Row="6"
                         Grid.ColumnSpan="3"
                         Name="loginTB"
                         Tag="Логин"/>

                <Grid Grid.Column="0"
                      Grid.Row="8"
                      Grid.ColumnSpan="3">
                    
                    <TextBox Tag="Пароль"
                             Name="PassTB"/>
                    
                    <components:BindablePasswordBox Password="{Binding Password}"
                                                    x:Name="PassPB"/>
                </Grid>

                <CheckBox Grid.Column="0"
                          Grid.Row="10"
                          Grid.ColumnSpan="3"
                          Content="Показать пароль"
                          Name="VisPassCB"
                          Click="VisibilityPassword_Click"/>
            </Grid>

            <!-- Кнопки -->
            <Button Content="Вернуться ко входу"
                    Click="Back_Click"
                    Style="{StaticResource ButtonStandard}"
                    DockPanel.Dock="Bottom"/>

            <Button Content="Зарегистрироваться"
                    Margin="0 0 0 20"
                    Click="Reg_Click"
                    Style="{StaticResource ButtonPriority}"
                    DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
