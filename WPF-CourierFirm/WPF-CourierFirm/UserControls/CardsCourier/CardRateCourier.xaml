<UserControl x:Class="WPF_CourierFrim.UserControls.CardsCourier.CardRateCourier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CourierFrim.UserControls.CardsCourier"
             mc:Ignorable="d" >

    <Grid Margin="0 0 20 20">

        <Border Background="{StaticResource BackgroundDarkBrush}"
                Padding="20"
                CornerRadius="10">

            <DockPanel LastChildFill="False"
                       Width="320">
                <!-- Заголовок -->
                <TextBlock Style="{StaticResource TextH2}"
                           DockPanel.Dock="Top"
                           Margin="0 0 0 24">
                    <Run Text="{Binding Name}"/>
                </TextBlock>

                <!-- Описание -->
                <TextBlock Margin="0 0 0 10"
                           DockPanel.Dock="Top"
                           TextWrapping="Wrap"
                           TextAlignment="Justify">
                    <Run Text="{Binding Description}"
                         Style="{StaticResource TextCardInfo}"/>
                </TextBlock>

                <TextBlock DockPanel.Dock="Bottom"
                           TextWrapping="Wrap">
                    <Run Text="Цена:"
                         Style="{StaticResource TextCardTitle}"/>
                    <Run Text="{Binding Cost, StringFormat={}{0}р.}"
                         Style="{StaticResource TextCardCost}"/>
                </TextBlock>

            </DockPanel>

            <Border.Effect>
                <DropShadowEffect BlurRadius="12" 
                                  ShadowDepth="4" 
                                  Opacity="0.3"
                                  Color="{StaticResource ShadowBrush}"/>
            </Border.Effect>

        </Border>

    </Grid>

</UserControl>
