<Page x:Class="WPF_CourierFrim.Pages.PagesAdmin.OrderPageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_CourierFrim.Pages.PagesAdmin"
      mc:Ignorable="d" 
      d:Width="900" d:Height="450"
      xmlns:converters="clr-namespace:WPF_CourierFrim.Classes.Converters">

    <DockPanel>

        <!-- Область параметров -->
        <DockPanel DockPanel.Dock="Top"
                   Margin="0 0 0 35"
                   LastChildFill="False">

            <Grid>
                <TextBox Width="360"
                         MinWidth="150"
                         Name="searchTB"
                         Tag="Поиск"
                         MaxLength="70"
                         DockPanel.Dock="Left"
                         ToolTip="Нажмите на значок поиска для обновления данных"/>
                
                <Button Name="searchBTN"
                        HorizontalAlignment="Right"
                        Tag="Search"
                        Style="{StaticResource ButtonIconTransperent}"/>
            </Grid>

            <Button Style="{StaticResource ButtonIconPriority}"
                    DockPanel.Dock="Right"
                    Tag="Add"
                    Click="Add_Click"
                    Content="Создать новый"/>

            <ComboBox Style="{StaticResource FilterCB}"
                      Margin="10 0"
                      Name="filterCB"
                      Tag="Фильтр"/>

            <ComboBox Style="{StaticResource SorterCB}"
                      Name="sorterCB"
                      Tag="Сортировка"/>

            <CheckBox Style="{StaticResource ChackBoxAscending}"
                      Margin="5 0 10 0"
                      Name="ascendingCHB"/>

            <Button Name="resetFiltersBTN"
                    Style="{StaticResource ButtonIconMedium}"
                    Content="Очистить все"
                    Tag="restore"
                    ToolTip="Сброс фильтров"/>

        </DockPanel>

        <!-- Область вывода информации -->
        <Grid>

            <!-- Контент -->
            <Grid>
                <ScrollViewer Name="contentScroll"
                          Style="{StaticResource ScrollViewerStandart}">
                    <ItemsControl Name="cardsIC">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="Данные о заказах отсутствуют"
                           Style="{StaticResource TextH2}"
                           Visibility="{Binding Items.Count, ElementName=cardsIC, 
                           Converter={x:Static converters:IntToVisibilityConverter.Instance } }"/>
            </Grid>

        </Grid>

    </DockPanel>

</Page>

