<UserControl x:Class="WPF_CourierFirm.Components.BindableDateBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CourierFirm.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <TextBox Name="dateBox"
             TextChanged="DateBox_TextChanged"
             PreviewKeyDown="DateBox_PreviewKeyDown"
             PreviewTextInput="DateBox_PreviewTextInput"
             MaxLength="10"
             Tag="Дата рождения"/>

</UserControl>
