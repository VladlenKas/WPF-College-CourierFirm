<Window x:Class="WPF_CourierFrim.Windows.DialogWindows.AddOrgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CourierFrim.Windows.DialogWindows"
        mc:Ignorable="d"
        
        xmlns:behaviors="clr-namespace:WPF_CourierFrim.Classes"
        xmlns:components="clr-namespace:WPF_CourierFrim.Components"
        
        SizeToContent="Height"
        MinHeight="650"
        MinWidth="450" Width="450"
        Title="Добавление организации" 
        Style="{StaticResource WindowOrdinary}"
        WindowStartupLocation="CenterScreen">

    <Grid Name="grid"
          Margin="35">

        <DockPanel LastChildFill="False"
                   MaxWidth="450">

            <!-- Заголовок -->
            <TextBlock Style="{StaticResource TextH2}"
                       DockPanel.Dock="Top"
                       Margin="0 0 0 16">
                <Run Text="Добавление организации"/>
            </TextBlock>

            <!-- Подзаголовок -->
            <TextBlock Style="{StaticResource TextH6}"
                       Margin="0 0 0 24"
                       TextWrapping="Wrap"
                       Text="Ни одно поле не должно повторяться с данными существующих организаций"
                       Opacity="0.5"
                       DockPanel.Dock="Top"/>

            <TextBox Tag="Название"
                     Name="nameTB"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     MaxLength="30"
                     behaviors:TextBoxValidationBehavior.ValidationType="Cyrillic"/>

            <components:BindablePhoneBox Placeholder="Номер телефона "
                                         x:Name="phoneTB"
                                         Margin="0 0 0 12"
                                         DockPanel.Dock="Top"
                                         VerticalContentAlignment="Top"/>

            <TextBox Tag="Электронная почта "
                     Name="emailTB"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     VerticalContentAlignment="Top"
                     MaxLength="90"
                     behaviors:TextBoxValidationBehavior.ValidationType="Email"/>

            <TextBox Tag="Адрес"
                     Name="addressTB"
                     Margin="0 0 0 24"
                     DockPanel.Dock="Top"
                     Height="120"
                     MaxLength="120"
                     behaviors:TextBoxValidationBehavior.ValidationType="Description"/>

            <Button Style="{StaticResource ButtonStandard}"
                    DockPanel.Dock="Bottom"
                    Content="Выйти"
                    Click="Exit_Click"/>

            <Button Style="{StaticResource ButtonPriority}"
                    DockPanel.Dock="Bottom"
                    Content="Добавить"
                    Margin="0 0 0 12"
                    Click="Add_Click"/>

        </DockPanel>

    </Grid>

</Window>