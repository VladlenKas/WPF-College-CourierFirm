<Window x:Class="WPF_CourierFrim.DialogWindows.AddTransportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        
        xmlns:behaviors="clr-namespace:WPF_CourierFrim.Classes"
        xmlns:components="clr-namespace:WPF_CourierFrim.Components"
        
        SizeToContent="Height"
        MinHeight="650"
        MinWidth="450" Width="450"
        Title="Редактирование данных о транспортном средстве" 
        Style="{StaticResource WindowOrdinary}"
        WindowStartupLocation="CenterScreen">

    <Grid Name="grid"
          Margin="35">

        <DockPanel LastChildFill="False"
                   MaxWidth="450">

            <!-- Заголовок -->
            <TextBlock Style="{StaticResource TextH2}"
                       DockPanel.Dock="Top"
                       Margin="0 0 0 16"
                       TextWrapping="Wrap">
                <Run Text="Редактирование данных о транспортном средстве"/>
            </TextBlock>

            <!-- Подзаголовок -->
            <TextBlock Style="{StaticResource TextH6}"
                       Margin="0 0 0 24"
                       TextWrapping="Wrap"
                       Text="Здесь вы можете заполнить или отредактировать данные о своем ТС"
                       Opacity="0.5"
                       DockPanel.Dock="Top"/>

            <TextBox Tag="Лицензионный номер (пример: А123БВ)"
                     Name="licensePlateTB"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     MaxLength="6"
                     behaviors:TextBoxValidationBehavior.ValidationType="CyrillicAndNumbers"/>

            <TextBox Name="brandTB"
                     Tag="Марка"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     MaxLength="20"
                     behaviors:TextBoxValidationBehavior.ValidationType="Cyrillic"/>

            <TextBox Name="modelTB"
                     Tag="Модель"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     MaxLength="20"
                     behaviors:TextBoxValidationBehavior.ValidationType="CyrillicAndNumbers"/>

            <TextBox Name="yearTB"
                     Tag="Год выпуска"
                     Margin="0 0 0 12"
                     DockPanel.Dock="Top"
                     MaxLength="4"
                     behaviors:TextBoxValidationBehavior.ValidationType="Numbers"/>

            <TextBox x:Name="colorTB"
                     Tag="Цвет"
                     Margin="0 0 0 40"
                     DockPanel.Dock="Top"
                     MaxLength="20"
                     behaviors:TextBoxValidationBehavior.ValidationType="Cyrillic"/>


            <Button Style="{StaticResource ButtonStandard}"
                    DockPanel.Dock="Bottom"
                    Content="Выйти"
                    Click="Exit_Click"/>

            <Button Style="{StaticResource ButtonPriority}"
                    DockPanel.Dock="Bottom"
                    Content="Сохранить"
                    Margin="0 0 0 12"
                    Click="Add_Click"/>

        </DockPanel>

    </Grid>

</Window>