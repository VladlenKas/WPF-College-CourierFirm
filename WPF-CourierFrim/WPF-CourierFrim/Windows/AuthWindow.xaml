<Window x:Class="WPF_CourierFrim.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CourierFrim"
        mc:Ignorable="d"
        
        xmlns:helpers="clr-namespace:WPF_CourierFrim.Classes.Helpers"
        xmlns:components="clr-namespace:WPF_CourierFrim.Components"
        
        Title="Вход в CourierFirm" 
        Height="800" Width="1200"   
        MinHeight="700" MinWidth="1050"
        Style="{StaticResource WindowOrdinary}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="50">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/AuthImage.png"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

        <DockPanel Grid.Column="2"
                   Width="440"
                   LastChildFill="False"
                   HorizontalAlignment="Center">

            <TextBlock Style="{StaticResource TextH1}"
                       Text="Вход в аккаунт"
                       Padding="0 0 0 16"
                       DockPanel.Dock="Top"/>

            <TextBlock Style="{StaticResource TextH6}"
                       TextWrapping="Wrap"
                       Text="Нет аккаунта? Обратитесь для регистрации в администрацию курьерской фирмы"
                       Opacity="0.5"
                       Margin="0 0 0 24" 
                       DockPanel.Dock="Top"/>

            <TextBox Margin="0 0 0 12"
                     Tag="Логин"
                     Name="loginTB"
                     DockPanel.Dock="Top"
                     helpers:TextBoxHelper.IconKind="Login"/>

            <Grid DockPanel.Dock="Top"
                  Margin="0 0 0 24">

                <TextBox Tag="Пароль"
                         Name="PassTB"
                         Visibility="Hidden"
                         helpers:TextBoxHelper.IconKind="PasswordOutline"/>
                
                <components:BindablePasswordBox Password="{Binding Password}"
                                                x:Name="PassPB"
                                                Visibility="Visible"/>
            </Grid>

            <CheckBox Content="Показать пароль"
                      Name="VisPassCB"
                      Click="VisibilityPassword_Click"
                      DockPanel.Dock="Top"/>

            <Button Content="Закрыть приложение"
                    Click="Exit_Click"
                    Style="{StaticResource ButtonStandard}"
                    DockPanel.Dock="Bottom"/>
    
            <Button Content="Войти"
                    Margin="0 0 0 12"
                    Click="Login_Click"
                    Style="{StaticResource ButtonPriority}"
                    DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>