<Window x:Class="WPF_CourierFrim.Windows.NavWindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CourierFrim.Windows"
        mc:Ignorable="d"
        
        Height="800" Width="1200"   
        MinHeight="700" MinWidth="1050"
        Style="{StaticResource WindowOrdinary}"
        WindowStartupLocation="CenterScreen">
    
    <DockPanel>
        
        <!-- Навигационная панель -->
        <Grid Background="{StaticResource BackgroundDarkBrush}">
            
            <StackPanel Margin="16 10">

                <StackPanel Margin="0 28"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    <Image Source="/Images/LogoCourierFirm.png"
                           Width="48"
                           Margin="0 0 5 0"/>

                    <TextBlock Style="{StaticResource TextH6}"
                               Text="Fast Courier"/>
                </StackPanel>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="orderRButton"
                             Content="Заказы"
                             Tag="listBoxOutline"
                             GroupName="navItems"
                             Margin="0 0 0 10"
                             IsChecked="True"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="deliveryRButton"
                             Content="Доставки"
                             Tag="truckDeliveryOutline"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="rateRButton"
                             Content="Тарифы"
                             Tag="speedometer"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="employeeRButton"
                             Content="Сотрудники"
                             Tag="userOutline"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="vehicleRButton"
                             Content="Автомобили"
                             Tag="carOutline"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="organisationRButton"
                             Content="Организации"
                             Tag="homeSiloOutline"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="statisticRButton"
                             Content="Статистика"
                             Tag="chartLine"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>

                <Separator Background="#ffffff"
                           Margin="0 0 0 10"/>

                <RadioButton Style="{StaticResource RadioButtonNavigation}"
                             Name="ExitRButton"
                             Content="Выйти"
                             Tag="logout"
                             GroupName="navItems"
                             Margin="0 0 0 10"/>
                
                
            </StackPanel>
            
        </Grid>

        <!-- Меню -->
        <Grid/>
        
    </DockPanel>
</Window>
